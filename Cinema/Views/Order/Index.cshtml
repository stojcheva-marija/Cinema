
@model List<Cinema.Domain.Domain_models.Order>
@*
    For more information on enabling MVC for empty projects, visit https: //go.microsoft.com/fwlink/?LinkID =397860
*@
@{
}

<h4 class="text-center text-uppercase m-3">Orders</h4>

<hr />

<div class="container">

    <div class="row">
        <a class="btn mb-3 ml-3" style="background-color: #EFEFF1" asp-controller="Order" asp-action="ExportAllOrders">Export Orders</a>
    </div>

    <table class="table table-hover">
        <thead style="background-color: #ECD4D4">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Custumer Details</th>
                <th scope="col">Number of tickets</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];

                <tr>
                    <th scope="row">@(i+1)</th>
                    <td>@item.User.Email - @item.User.Name  @item.User.Surname</td>
                    <td class="text-center">@item.TicketInOrders.Count()</td>
                    <td><a class="btn" style="background-color: #CCDBE2" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                    <td><a class="btn" style="background-color: #C9CBE0" asp-action="CreateInvoice" asp-route-id="@item.Id">Create Invoice</a></td>
                </tr>

            }
        </tbody>


    </table>

</div>