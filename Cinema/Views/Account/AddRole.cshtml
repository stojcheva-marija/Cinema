@model Cinema.Domain.Domain_models.AddToRoleModel

<h4 class="text-center text-uppercase m-3">Add user to role</h4>
<hr/>
@using (Html.BeginForm("AddRole", "Account"))
{
    <div class="form-group w-50">
        @Html.DropDownListFor(z => z.Email, new SelectList(Model.Emails), new { @class = "form-control" })
    </div>
    <div class="form-group w-50">
        @Html.DropDownListFor(z => z.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control" })
    </div>
    <button type="submit" button type="submit" class="btn" style="background-color: #E1F1E7; border: 2px solid #B1D3C5">Save</button>
}

